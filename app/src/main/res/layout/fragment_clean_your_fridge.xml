<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"> <!-- Optional background color -->

    <!-- Title Section -->
    <TextView
        android:id="@+id/cleanYourFridgeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clean Your Fridge"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
    android:drawablePadding="8dp" />

    <!-- Search Bar Section -->
    <EditText
        android:id="@+id/searchDishesEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search the dishes ......"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="text"
    android:drawablePadding="8dp" />

    <!-- RecyclerView for displaying dishes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dishRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp" />

</LinearLayout>
