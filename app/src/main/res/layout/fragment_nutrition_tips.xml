<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F2F2F2">

    <!-- Title Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nutrition Tips"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:textColor="#333333" />

    <!-- Nutrition Tip 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:elevation="2dp">

        <!-- Icon Placeholder -->
        <ImageView
            android:id="@+id/tip1Image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/calories"
            android:layout_gravity="center_vertical" />

        <!-- Text Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tip1Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Counting Calories"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Try raw veggies with hummus for a satisfying snack"
                android:textSize="14sp"
                android:textColor="#666666" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@android:drawable/ic_menu_info_details" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nutritionist"
                    android:layout_marginStart="4dp"
                    android:textSize="12sp"
                    android:textColor="#888888" />
            </LinearLayout>
        </LinearLayout>

        <!-- Right Icon (e.g., Water Drop) -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_info_details"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <!-- Nutrition Tip 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="2dp">


        <ImageView
            android:id="@+id/waterIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/water"
            android:layout_gravity="center_vertical" />

        <!-- Text Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tip2Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hydration Importance"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drink at least 8 glasses of water daily for optimal health"
                android:textSize="14sp"
                android:textColor="#666666" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@android:drawable/ic_menu_info_details" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nutritionist"
                    android:layout_marginStart="4dp"
                    android:textSize="12sp"
                    android:textColor="#888888" />
            </LinearLayout>
        </LinearLayout>

        <!-- Right Icon (e.g., Water Drop) -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_info_details"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>

